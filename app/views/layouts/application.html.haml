!!! Strict
%html{html_attrs}
  
  %head
    %title
      = h(yield(:title) || "Untitled")
    %meta{"http-equiv"=>"Content-Type", :content=>"text/html; charset=utf-8"}/
    = stylesheet_link_tag 'formtastic', 'application'
    = yield(:head)
  
  %body
    #navigation
      %ul
        %li= link_to "All Contacts", contacts_path
        %li= link_to "People", people_path
        %li= link_to "Companies", companies_path
        %li= link_to "Notes", notes_path
        
    #container
      - flash.each do |name, msg|
        = content_tag :div, msg, :id => "flash_#{name}"
      
      - if show_title?
        %h1=h yield(:title)
      
      = yield
      #footer
